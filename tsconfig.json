{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "/",
    "paths": {
      "@shared/components/*": ["packages/components/*"],
      "@debug/*": ["apps/tests/*"],
      "@landing/components/*": ["apps/landing/components/*"],
      "@pwa/components/*": ["apps/pwa/components/*"],
      "@pwa/utils/*": ["apps/pwa/utils/*"],
      "@pwa/features/*": ["apps/pwa/features/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}